
# http://editorconfig.org
root = true

# Global settings for every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h}]
indent_size = 4
indent_style = tab

[*.{sh,tpl}]
indent_size = 4
indent_style = tab

[*.html]
indent_size = 2
indent_style = space

[{Makefile,makefile,*.mk}]
indent_size = 8
indent_style = tab
